<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/applied_disable"/> <!-- A lighter or grayish version of the color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- Enabled state -->
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/applied_enable"/> <!-- Use your specific color here -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
