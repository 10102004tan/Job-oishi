<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JobOishi" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item> <!--custom animation style-->
    </style>
    <style name="Theme.JobOishi" parent="Base.Theme.JobOishi" >

    </style>

    <style name="Profile_Title_TextView">
        <item name="android:lineHeight">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>


    <style name="Profile_Normal_TextView">
        <item name="android:lineHeight">24dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Profile_Error_TextView">
        <item name="android:lineHeight">24dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Profile_CardView">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">10sp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorControlNormal">@color/blue</item>
    </style>

</resources>