<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/company_shimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <include layout="@layout/company_shimmer"/>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <LinearLayout
        android:id="@+id/company_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <include
            android:id="@+id/include"
            layout="@layout/toolbar" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/intro_company_header"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/myImageView"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/logo_tech_farm" />

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="187dp">

                            <ImageView
                                android:id="@+id/ic_verify_bd"
                                android:layout_width="47dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/verify_bg"
                                app:layout_constraintBottom_toTopOf="@+id/ic_location"
                                app:layout_constraintEnd_toStartOf="@+id/guideline"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5" />

                            <TextView
                                android:id="@+id/lbl_company_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Cong ty co phan cong nghe Techfram"
                                android:textAllCaps="true"
                                app:layout_constraintBottom_toBottomOf="@+id/ic_verify_bd"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/guideline"
                                app:layout_constraintTop_toTopOf="@+id/ic_verify_bd" />

                            <ImageView
                                android:id="@+id/ic_people"
                                android:layout_width="47dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_group_people"
                                app:layout_constraintBottom_toTopOf="@+id/ic_field"
                                app:layout_constraintEnd_toStartOf="@+id/guideline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ic_location"
                                app:layout_constraintVertical_bias="0.5" />

                            <TextView
                                android:id="@+id/lbl_quantity_people"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="11 - 50 người"
                                app:layout_constraintBottom_toBottomOf="@+id/ic_people"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/guideline"
                                app:layout_constraintTop_toTopOf="@+id/ic_people" />

                            <ImageView
                                android:id="@+id/ic_location"
                                android:layout_width="47dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_location"
                                app:layout_constraintBottom_toTopOf="@+id/ic_people"
                                app:layout_constraintEnd_toStartOf="@+id/guideline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ic_verify_bd"
                                app:layout_constraintVertical_bias="0.5"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/lbl_location"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Quận 2, TP.Hồ Chí Minh"
                                app:layout_constraintBottom_toBottomOf="@+id/ic_location"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/guideline"
                                app:layout_constraintTop_toTopOf="@+id/ic_location" />

                            <ImageView
                                android:id="@+id/ic_field"
                                android:layout_width="47dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_company"
                                app:layout_constraintBottom_toTopOf="@+id/ic_verify"
                                app:layout_constraintEnd_toStartOf="@+id/guideline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ic_people"
                                app:layout_constraintVertical_bias="0.5"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/lbl_field"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Computer Games"
                                app:layout_constraintBottom_toBottomOf="@+id/ic_field"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/guideline"
                                app:layout_constraintTop_toTopOf="@+id/ic_field" />

                            <ImageView
                                android:id="@+id/ic_verify"
                                android:layout_width="47dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_verify"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/guideline"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/ic_field"
                                app:layout_constraintVertical_bias="0.5"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/txt_verify_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Verified tháng 11 2023"
                                app:layout_constraintBottom_toBottomOf="@+id/ic_verify"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/guideline"
                                app:layout_constraintTop_toTopOf="@+id/ic_verify" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guideline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_end="265dp" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="7dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView style="@style/CardStyle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/lbl_about_company"
                                style="@style/TextViewTitle"
                                android:text="" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/line_color" />

                            <TextView
                                android:id="@+id/lbl_desctiption"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView style="@style/CardStyle">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                style="@style/TextViewTitle"
                                android:text="Offce Adress" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/line_color" />

                            <TextView
                                android:id="@+id/lbl_addresses"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/CardStyle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                style="@style/TextViewTitle"
                                android:text="Website" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/line_color" />

                            <TextView
                                android:id="@+id/lbl_website"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blue" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/image_galleries_item"
                        style="@style/CardStyle"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextViewTitle"
                                android:text="Hình ảnh" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginBottom="20dp"
                                android:background="@color/line_color" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/gralaries_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView style="@style/CardStyle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextViewTitle"
                                android:text="Vệc đang đăng tuyển" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:background="@color/line_color" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/jobs_of_company"
                                android:layout_width="match_parent"
                                android:layout_height="450dp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/image"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:lottie_rawRes="@raw/a404"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_centerInParent="true"
            />
    </LinearLayout>

    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>